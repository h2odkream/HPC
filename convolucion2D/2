cmake_minimum_required(VERSION 2.8)
project( convoConstMem )
find_package( OpenCV REQUIRED )
find_package( OpenCV 2.4 QUIET NO_DEFAULT_PATH PATHS "/usr/local/include/opencv2" )
find_package( CUDA REQUIRED )
set(CUDA_NVCC_FLAGS ${CUDA_NVCC_FLAGS}; -O3 -arch=sm_52)
#set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=gnu++11")
#set(CUDA_NVCC_FLAGS="nvcc.flags=-std=c++11 -D__CORRECT_ISO_CPP11_MATH_H_PROTO")
cuda_add_executable( convoConstMem convoConstMem.cu )
target_link_libraries( convoConstMem ${OpenCV_LIBS} )
